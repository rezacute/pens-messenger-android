<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.pens.pensmessenger.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <!-- This permission is required to vibrate the phone when push message is received. -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- These permissions are required to use the KiiCloudSDK. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- These permissions are required to use the push notification. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="net.pens.pensmessenger.app.permission.C2D_MESSAGE" />

    <permission
        android:name="net.pens.pensmessenger.app.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <!-- Using theme is generated by http://jgilfelt.github.io/android-actionbarstylegenerator/ -->
    <application
        android:name=".PMApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.pensmessenger" >
        <activity
            android:name="net.pens.pensmessenger.app.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.pens.pensmessenger.app.ui.SigninActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTask" />
        <activity
            android:name="net.pens.pensmessenger.app.ui.ChatMainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTask" />
        <activity
            android:name="net.pens.pensmessenger.app.ui.AddFriendActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="standard" />
        <activity
            android:name="net.pens.pensmessenger.app.ui.ChatActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTask" />
        <!-- This settings is required to receive the push message. -->
        <receiver
            android:name="net.pens.pensmessenger.app.GCMPushReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="net.pens.pensmessenger.app" />
            </intent-filter>
        </receiver>
        <!-- This service is required to send event data to Kii Cloud. -->
        <service android:name="com.kii.cloud.analytics.EventUploadService" />

        <activity
            android:name="com.kii.cloud.storage.social.twitter.KiiTwitterLoginActivity"
            android:label="@string/app_name" />
    </application>

</manifest>